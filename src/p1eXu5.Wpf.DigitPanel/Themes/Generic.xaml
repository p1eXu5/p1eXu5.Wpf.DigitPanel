    <BooleanToVisibilityConverter x:Key="conv_BoolToVis" />


    <Style TargetType="{x:Type local:DigitTableBase}">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{DynamicResource {x:Static local:DigitPanelColors.DigitPanelBackgroundKey}}" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static local:DigitPanelColors.ActiveDigitBackgroundKey}}" />
        <Setter Property="DigitBackground" Value="{DynamicResource {x:Static local:DigitPanelColors.InactiveDigitBackgroundKey}}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DigitTableBase}">
                    <Border Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            >
                        <ListBox Width="Auto"
                                 Height="Auto"
                                 Margin="10,5"
                                 HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                 ItemsSource="{Binding Digits,
                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                 Background="{TemplateBinding Background}"
                                 Foreground="{TemplateBinding Foreground}"
                                 BorderThickness="0"
                                 >
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:DigitParameters}">
                                    <local:Digit Width="{Binding DigitWidth,
                                                                 RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                AncestorType=local:DigitTableBase,
                                                                                                AncestorLevel=1}}"
                                                 Mask="{Binding Mask}"
                                                 DotVisibility="{Binding Dot,
                                                                         Converter={StaticResource conv_BoolToVis}}"
                                                 ColonVisibility="{Binding Colon,
                                                                           Converter={StaticResource conv_BoolToVis}}"
                                                 IsDotOn="True"
                                                 IsColonOn="True"
                                                 Control.Foreground="{Binding Foreground,
                                                                              RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                             AncestorType=local:DigitTableBase,
                                                                                                             AncestorLevel=1}}"
                                                 Control.Background="{Binding DigitBackground,
                                                                              RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                             AncestorType=local:DigitTableBase,
                                                                                                             AncestorLevel=1}}"
                                                 InactiveRadius="{Binding InactiveRadius,
                                                                          RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                         AncestorType=local:DigitTableBase,
                                                                                                         AncestorLevel=1}}"
                                                 ActiveRadius="{Binding ActiveRadius,
                                                                        RelativeSource={RelativeSource Mode=FindAncestor,
                                                                                                       AncestorType=local:DigitTableBase,
                                                                                                       AncestorLevel=1}}"
                                                 />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
